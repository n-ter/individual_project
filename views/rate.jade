extends layout

block content
	.block-header
		h2 РАСХОД
	.row.clearfix
		.col-lg-12.col-md-12.col-sm-12.col-xs-12
			.card
				.header
					h2 ВВЕСТИ РАСХОД
				.body
					form#form_validation_rate
						.form-group.form-float
							.form-line
								input#rate_date.date.form-control(type='text', name='date', placeholder='Выберите дату', required='')
						.form-group.form-float
							select#rate_operation(title='Выберите операцию', type='select', name='operation', required='')
								option(value='', disabled='', selected='') Выберите операцию
								option Расход / Коммунальные платежи
								option Расход / Рестораны и кафе
								option Расход / Супермаркеты
								option Расход / Транспорт
								option Расход / Другое
						.form-group.form-float
							select#rate_acc.accountSelector(title='Выберите счет', type='select', name='accSel', required='')
								option(value='', disabled='', selected='') Выберите счет
						.form-group.form-float
							.form-line
								input#rate_sum.form-control(type='number', name='number', max='-0.001', required='')
								label.form-label Сумма
						.form-group.form-float
							.form-line
								input#rate_comment.form-control(type='text', name='comment')
								label.form-label Комментарий
						button#new_rate.btn.bg-light-green.waves-effect(type='submit') ПОДТВЕРДИТЬ РАСХОД
			.card
				.header
					h2 МОИ РАСХОДЫ
				.tab-content
					.body
						.table-responsive
							table#table_myrate.display(cellspacing='0', width='100%')
								thead
									tr
										th Операция расхода
										th Счет
										th Дата
										th Сумма
										th Комментарий
										th Удалить расход
								tfoot
									tr
										th 
										th 
										th
										th
										th
										th